<div class="news-list col-xs-12 col-md-9">
    <p class="hidden-md hidden-lg">
        <button type="button" class="btn sidebar-btn" data-toggle="offcanvas" title="Toggle sidebar">sidebar</button>
    </p>
    {% if app.user is not empty %}
        {% if app.user.rol is not empty %}
            {% if app.user.rol == ['ROLE_ADMIN'] or app.user.rol == ['ROLE_COLABORATOR'] %}
                <a href="{{ path('noticia_new') }}">
                    <img src="{{ asset('assets/images/common/new.png') }}" width="50px" height="50px" alt="edit image">
                </a>
            {% endif %}
        {% endif %}
    {% endif %}

    {% for noticia in noticias.results %}
    <!-- noticia -->
    <div class="item img-top">
        <div class="img-wrap">
            <div class="bage">
                <a href="{{ path('noticias_byId', {id: noticia.Id}) }}">Destacado</a>
            </div>
            <div>
                {% if app.user is not empty %}
                    {% if app.user.rol is not empty %}
                        {% if app.user.rol == ['ROLE_ADMIN'] or app.user.rol == ['ROLE_COLABORATOR']  %}
                            <a href="{{ path('noticia_edit', {id: noticia.Id}) }}">
                                <div class="dropdown" style="float: right; padding-right: 60px">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('noticia_edit', {id: noticia.Id}) }}">
                                                Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('noticia_delete', {id: noticia.Id}) }}">
                                                Borrar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </a>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </div>
            <a href="{{ path('noticias_byId', {id: noticia.Id}) }}"><img src="{{ asset('assets/images/noticias/') }}{{ noticia.Imagen }}" alt="post image"></a>
        </div>
        <div class="info">
            <a href="{{ path('noticias_byId', {id: noticia.Id}) }}" class="name">{{ noticia.Titular }}</a>
            <div class="wrap">
                <a href="{{ path('noticias_byId', {id: noticia.Id}) }}">{{ noticia.Fecha|date("d/m/Y") }}</a> por <a href="{{ path('noticias_byId', {id: noticia.Id}) }}">{{ noticia.Colaborador.NombreCompleto }}</a>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    {% endfor %}
    <!-- fin noticia -->

    {% if noticias.hasToPaginate %}
        <div class="product_pagination">
            <ul>
                {% if noticias.hasPreviousPage %}
                    <li class="prev"><a href="{{ path('noticia_paginated', {page: noticias.previousPage}) }}" rel="previous"><i class="fa fw fa-long-arrow-left"></i> {{ 'previous'|trans }}</a></li>
                {% else %}
                    <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'previous'|trans }}</span></li>
                {% endif %}

                {% for i in 1..noticias.lastPage %}
                    {% if i == noticias.currentPage %}
                        <li class="active"><span>{{ i }} <span class="sr-only">{{ 'current'|trans }}</span></span></li>
                    {% else %}
                        <li><a href="{{ path('noticia_paginated', {page: i}) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}

                {% if noticias.hasNextPage %}
                    <li class="next"><a href="{{ path('noticia_paginated', {page: noticias.nextPage}) }}" rel="next">{{ 'next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                {% else %}
                    <li class="next disabled"><span>{{ 'next'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
